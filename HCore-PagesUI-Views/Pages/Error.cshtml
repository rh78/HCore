@page
@using Microsoft.AspNetCore.Hosting
@model ErrorModel
@inject IHostingEnvironment host
@{
    ViewData["Title"] = Messages.error_title;
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h4>@Messages.error_header</h4>
        <p>@Messages.error_header_text</p>
        <hr />
        @if (!string.IsNullOrEmpty(Model.Error))
        {
            <p>
                <strong>
                    <em>
                        @Model.Error
                    </em>
                </strong>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div>@Model.Description</div>
                }
            </p>
        }

        @if (Model.ShowRequestId && !string.IsNullOrEmpty(Model.RequestId))
        {
            <p>
                <strong>@Messages.error_request_id</strong> <code>@Model.RequestId</code>
            </p>
        }

        <hr />

        <p>
            <a href="/" class="btn btn-primary" role="button">@Messages.button_back</a>
        </p>
    </div>
</div>
