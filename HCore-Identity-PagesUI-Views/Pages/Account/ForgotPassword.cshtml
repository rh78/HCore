@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = Messages.forgot_password_title;
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="post">            
            <h4>@Messages.forgot_password_header</h4>
            <p>@Messages.forgot_password_header_text</p>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <button type="submit" class="btn btn-default">@Messages.button_submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
