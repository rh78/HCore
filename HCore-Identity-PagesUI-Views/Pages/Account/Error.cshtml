@page
@using Microsoft.AspNetCore.Hosting
@model ErrorModel
@inject IHostingEnvironment host
@{
    ViewData["Title"] = Messages.error_title;

    var error = Model?.Error?.Error;
    var errorDescription = host.IsDevelopment() ? Model?.Error?.ErrorDescription : null;
    var requestId = Model?.Error?.RequestId;
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h4>@Messages.error_header</h4>
        <p>@Messages.error_header_text</p>
        <hr />
        @if (error != null)
        {
            <p>
                <strong>
                    <em>
                        @error
                    </em>
                </strong>

                @if (errorDescription != null)
                {
                    <div>@errorDescription</div>
                }
            </p>
        }

        @if (requestId != null)
        {
            <p>
                <strong>@Messages.error_request_id</strong> <code>@requestId</code>
            </p>
        }
    </div>
</div>
